{
  "manifest_version": 3,
  "name": "Labratorium AI Prompt Optimizer",
  "version": "4.0.1",
  "description": "Privacy-focused prompt optimization using Claude AI - by Labratorium.com",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Prompt Optimizer"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}